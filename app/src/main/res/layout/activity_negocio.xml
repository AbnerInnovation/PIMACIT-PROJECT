<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context="com.example.jmsan.desga.LoginActivity">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#0d2543">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Consultorio Médico del Noroeste"
                android:id="@+id/txtNombreNegocio"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="0dp"/>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_doctor_white_96"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Atendiendo las necesidades basicas de salud de la comunidad."
                android:id="@+id/txtDetalle"
                android:textAlignment="center"
                android:textColor="#f1f1f1"
                android:layout_gravity="center_horizontal|center"
                android:paddingTop="80dp"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">


            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección: "
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="1dp"
                android:maxLines="2"
                android:singleLine="true"
                android:paddingTop="5dp"/>
            <TextView
                android:id="@+id/tvDireccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Avenida Juarez #123"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="1dp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="0dp"/>


            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono: (645) 332 9988"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_telefono"
                android:drawablePadding="1dp"
                android:maxLines="2"
                android:singleLine="true"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/tvTiposCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipos de Cita"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_tipos_cita"
                android:drawablePadding="1dp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/tvTiposCitas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Consulta General"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="1dp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="0dp"/>

            <TextView
                android:id="@+id/tvHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horario de Atención"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType=""
                android:drawableLeft="@drawable/ic_reloj"
                android:drawablePadding="1dp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/tvHorario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="9:00 am - 12:00 pm"
                android:imeActionId="@+id/login"
                android:imeActionLabel=""
                android:imeOptions="actionUnspecified"
                android:inputType="textMultiLine"
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="1dp"
                android:maxLines="2"
                android:singleLine="true"
                android:paddingTop="0dp"
                android:textStyle="normal"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" >
                    <Button
                        android:id="@+id/btnAgendar"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Agendar"
                        android:textStyle="bold"
                        android:background="#0061a1"
                        android:textColor="#FFF"
                        android:fontFamily="sans-serif-light"
                        android:textSize="18dp"
                        android:onClick="AgendarCita"
                        android:paddingRight="15dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:drawableLeft="@drawable/ic_agendar_white"
                        android:drawablePadding="10dp"
                        />
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorito"
                        android:id="@+id/switch1"
                        android:layout_column="1"
                        android:drawableLeft="@drawable/ic_estrella_yellow"
                        android:drawablePadding="0dp"
                        android:textAlignment="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="20dp"/>

                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/email_sign_in_button1"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="¿Buscar otro?"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="#fff"
                android:textColor="#0d2543"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:paddingTop="5dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
